<p><%= t("devise.mailer.invitation_instructions.hello", email: @resource.name) %></p>

<p>
  <%= t("devise.mailer.invitation_instructions.someone_invited_you", application: @resource.organization.name).html_safe %>
</p>

<p><%= link_to t("devise.mailer.invitation_instructions.accept"), accept_invitation_url(@resource, invitation_token: @token, invite_redirect: decidim.root_path, host: @resource.organization.host).html_safe %></p>

<% if @resource.invitation_due_at %>
  <p><%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :long)).html_safe %></p>
<% end %>

<p><%= t("devise.mailer.invitation_instructions.ignore").html_safe %></p>
